{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "title": "This is the title",
    "subtitle": "This is the subtitle",
    "heroImage": "https://picsum.photos/300/200?image=900",
    "socialImages": {
        "heroImage": "https://picsum.photos/300/200?image=700",
        "profileImage": "https://picsum.photos/300/200?image=200"
    },
    "data": {
        "data1": "abcdefg",
        "data2": "hijklmnop",
        "data3": [ "Element Zero", "Element One", "Element Two" ],
        "data4": {
            "insideArray": [ "Inside Zero", "Inside One", "Inside Two" ]
        },
        "dataIndex": 2,
        "data5": {
            "inside": {
                "index": 0
            }
        },
        "disney": [
            {
                "name": "Mickey",
                "animal": "Mouse"
            },
            {
                "name": "Donald",
                "animal": "Duck"
            },
            {
                "name": "Pluto",
                "animal": "Dog"
            }
        ]
    },
	"body": [
		{
			"type": "TextBlock",
			"text": "This is the body of this card",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "Here is data1, data2: **{{data1}}, {{data2}}**.",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "Here is data3[2]: **{{data3[2]}}**.",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "Here is data4.insideArray[1]: **{{data4.insideArray[1]}}**.",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "Here is data4.insideArray[dataIndex]: **{{data4.insideArray[dataIndex]}}**.",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "Here is data4.insideArray[data5.inside.index]: **{{data4.insideArray[data5.inside.index]}}**.",
			"wrap": true
		},
		{
			"{{#each disney}}": {
				"type": "TextBlock",
				"text": "{{name}} is a {{animal}}"
			}
		},
		{
			"type": "TextBlock",
			"text": "{{#? dataThatDoesntExist}}",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "{{dataThatDoesntExist}}",
			"wrap": true
		},
		{
			"type": "TextBlock",
			"text": "{{dataThatDoesntExist}} {{#? dataThatDoesntExist}}",
			"wrap": true
		}
	],
    "actions" :
    [
        {
            "type": "Action.Submit",
            "title": "These"
        },
        {
            "type": "Action.Submit",
            "title": "are"
        },
        {
            "type": "Action.Submit",
            "title": "actions"
        }
    ]
}
